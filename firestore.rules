rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection des courtiers
    match /courtiers/{courtierId} {
      allow read: if true;  // Permet la lecture à tous
      allow write: if request.auth != null;  // Permet l'écriture uniquement aux utilisateurs authentifiés
    }
    
    // Règles pour la collection des utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 